generator client {
  provider = "prisma-client-js"
}

// generator client {
//   provider = "mongodb"
// }

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model File {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  path     String
  filename String
  comment  String?

  @@unique([path, filename])
}
